<?xml version="1.0" encoding="utf-8"?>
<component name="ifUserLoggedInComponent" extends="commonFields" initialFocus="playButton" >

  <children>
    
    <Rectangle width="1920" height="1080" color="#000000">
      <group translation="[0,0]">
        <MarkupGrid
        translation="[10,40]"
        vertFocusAnimationStyle="floatingFocus"
        numColumns="1"
        numRows="5"
        id="leftMarkUpGridList" 
        itemComponentName="leftMarkUpGridListItemComponent" 
        itemSpacing="[0, 20]"  
        itemSize = "[ 50, 50 ]"/>
        <Animation 
          id = "leftMarkUpGridListAnimation" 
          
          duration = "0.5" 
          easeFunction = "linear" >

          <Vector2DFieldInterpolator 
            key = "[ 0.0, 0.5, 1.0 ]" 
            keyValue = "[ [ 50, 50 ], [100,50], [180, 50] ]" 
            fieldToInterp = "leftMarkUpGridList.itemSize" />

      </Animation>
      <Animation 
          id = "leftMarkUpGridListAnimationWhenUnfocused" 
          
          duration = "0.5" 
          easeFunction = "linear" >

          <Vector2DFieldInterpolator 
            key = "[ 0.0, 0.5, 1.0 ]" 
            keyValue = "[ [180, 50], [100,50], [ 50, 50 ]]" 
            fieldToInterp = "leftMarkUpGridList.itemSize" />

      </Animation>
      </group>
      
        <!-- <Button id="logoutButton" text="Log out" translation="[700, 100]" focusedIconUri=" " iconUri=" " /> -->
        <Button id="playButton" text="Play" translation="[300, 100]" focusedIconUri=" " iconUri=" " />
    </Rectangle>
   
  </children>

  <script type="text/brightscript" uri="pkg:/components/loggedInComponent.brs" />
</component>